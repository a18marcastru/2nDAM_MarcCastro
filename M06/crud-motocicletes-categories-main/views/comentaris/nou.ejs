<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Nuevo Comentario</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1>Crear Nuevo comentario</h1>
  <form action="/comentaris" method="POST">
    <label for="motoId">Selecciona la motocicleta:</label>
    <select name="motoId" id="motoId" required>
        <% motocicletes.forEach(moto => { %>
            <option value="<%= moto.id %>"><%= moto.model %></option>
        <% }) %>
    </select>
    <br>
    <label for="usuari">Usuari:</label>
    <input type="text" name="usuari" id="usuari" required>
    <br>
    <label for="comentari">Comentari:</label>
    <textarea name="comentari" id="comentari"></textarea>
    <br>
    <button type="submit">Crear</button>
  </form>
  <a href="/motocicletes">Volver</a>
</body>
</html>
